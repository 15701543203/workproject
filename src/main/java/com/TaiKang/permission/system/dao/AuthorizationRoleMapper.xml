<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.TaiKang.permission.system.dao.AuthorizationRoleMapper">
    <delete id="deleteRolePer" parameterType="com.TaiKang.permission.system.bean.TempRolePer">
        DELETE
        FROM
        temp_role_per
        WHERE
        role_id = #{roleId}
        AND per_id = #{perId}
    </delete>

    <insert id="insertRolePermission" parameterType="com.TaiKang.permission.system.bean.TempRolePer" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO temp_role_per (
        role_id,
        per_id
        )
        VALUES
        (
        #{roleId},
        #{perId}
        )
    </insert>



</mapper>
